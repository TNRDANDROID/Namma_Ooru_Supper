<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="adapter"
            type="com.nic.nammaoorusuper.adapter.ActivityListAdapter" />
    </data>
    <RelativeLayout
        android:clickable="true"
        android:outlineAmbientShadowColor="@color/colorPrimary"
        android:outlineSpotShadowColor="@color/colorAccent"
        android:focusable="true"
        android:id="@+id/activity_name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8sdp"
        tools:ignore="UnusedAttribute"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp"
            android:layout_margin="@dimen/_10sdp"
            android:id="@+id/before"
            android:background="@drawable/corner_strong_rect_bg_color">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bimg_layout">
                <RelativeLayout
                    android:id="@+id/bg_layout"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:background="@drawable/cornered_border_bg_strong"
                    >
                    <RelativeLayout
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        >
                        <ImageView
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/camera_icon"
                            android:padding="@dimen/_5sdp"
                            android:tint="#00d7ff"
                            android:layout_centerHorizontal="true"/>

                    </RelativeLayout>
                </RelativeLayout>
                <TextView
                    android:id="@+id/category_title"
                    android:layout_toRightOf="@+id/bg_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_centerVertical="true"
                    android:text="Before"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold"
                    android:gravity="center_horizontal" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/completed_layout"
                android:layout_marginEnd="@dimen/_13sdp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_5sdp">

                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:src="@drawable/ic_complete_icon"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/details_layout_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_alignParentBottom="true">

                <TextView
                    android:id="@+id/take_photo_before"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_30sdp"
                    android:layout_marginBottom="@dimen/_30sdp"
                    android:layout_centerVertical="true"
                    android:text="Take Photo"
                    android:drawablePadding="@dimen/_3sdp"
                    android:drawableRight="@drawable/ic_arrow_right"
                    android:drawableTint="@color/d_grey1"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold"
                    android:gravity="center_horizontal" />

            </RelativeLayout>
        </RelativeLayout>



    </RelativeLayout>
</layout>