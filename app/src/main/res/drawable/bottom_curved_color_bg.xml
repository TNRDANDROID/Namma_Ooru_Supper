<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle"/>
    </item>
    <item
        android:bottom="0dp"
        android:left="-100dp"
        android:right="-100dp"
        android:top="-80dp">
        <shape android:shape="oval">
            <gradient android:angle="0"
                android:startColor="#00d7ff"
                android:endColor="#7535AD"/>

        </shape>
    </item>
</layer-list>

