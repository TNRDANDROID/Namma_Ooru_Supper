<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="adapter"
            type="com.nic.nammaoorusuper.adapter.ActivitySubListAdapter" />
    </data>
    <RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_15sdp"
    android:layout_marginRight="@dimen/_15sdp"
    android:layout_marginTop="@dimen/_15sdp"
    android:layout_marginBottom="@dimen/_15sdp"
    android:clickable="true"
    android:outlineAmbientShadowColor="@color/colorPrimary"
    android:outlineSpotShadowColor="@color/colorAccent"
    android:focusable="true"
    tools:ignore="UnusedAttribute">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/_50sdp"
        android:background="@drawable/cornered_rect_lite_bg_white"
        android:layout_centerVertical="true"
        >

        <RelativeLayout
            android:layout_toLeftOf="@+id/icon_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_gravity="start">
            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/no"
                android:gravity="start"
                android:layout_centerVertical="true"
                android:textColor="@color/d_grey2"
                android:textSize="@dimen/_14sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:text="1 ."
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:gravity="start"
                android:layout_centerVertical="true"
                android:textColor="@color/d_grey2"
                android:textSize="@dimen/_14sdp"
                android:text="name dfds dfdf dfdsf dfdf"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_alignParentEnd="true"
            android:id="@+id/icon_2"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_alignParentRight="true">
            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:id="@+id/go_icon"
                android:rotation="180"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_centerInParent="true"
                android:src="@drawable/back"
                android:tint="@color/d_grey2"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="@dimen/_10sdp" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
</layout>