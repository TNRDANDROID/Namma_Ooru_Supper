<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="adapter"
            type="com.nic.nammaoorusuper.adapter.DynamicRecyclerWidgetAdapter" />
    </data>
    <RelativeLayout
        android:clickable="true"
        android:outlineAmbientShadowColor="@color/colorPrimary"
        android:outlineSpotShadowColor="@color/colorAccent"
        android:focusable="true"
        android:id="@+id/activity_name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UnusedAttribute"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/enter_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_20dp"
                android:layout_marginTop="@dimen/padding"
                android:layout_marginRight="@dimen/margin_left_20dp"
                android:text="Description"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                />

            <RelativeLayout
                android:id="@+id/description_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/header"
                android:layout_below="@+id/enter_description"
                android:layout_marginLeft="@dimen/margin_left_20dp"
                android:layout_marginTop="@dimen/padding"
                android:layout_marginRight="@dimen/margin_left_20dp"
                android:background="@drawable/grey_bg"
                android:orientation="vertical">


                <EditText
                    android:layout_toLeftOf="@+id/description_audio_icon"
                    android:id="@+id/description_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:singleLine="true"
                    android:textSize="@dimen/_12sdp"
                    android:inputType="text"
                    android:hint="Enter Description"
                    android:background="@color/full_transparent"
                    android:gravity="left" />



            </RelativeLayout>
        </RelativeLayout>




    </RelativeLayout>
</layout>