<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="adapter"
            type="com.nic.nammaoorusuper.adapter.ActivityListAdapter" />
    </data>
    <RelativeLayout
        android:clickable="true"
        android:outlineAmbientShadowColor="@color/colorPrimary"
        android:outlineSpotShadowColor="@color/colorAccent"
        android:focusable="true"
        android:id="@+id/activity_name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8sdp"
        tools:ignore="UnusedAttribute"
        android:background="@drawable/cornered_rect_lite_bg_green">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/_50sdp"


            >
            <RelativeLayout
                android:id="@+id/icon_1"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:background="@drawable/button_background_count"
                android:layout_gravity="center"
                >
                <TextView
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:id="@+id/activity_count"
                    android:text="38"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="@dimen/_10sdp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_toLeftOf="@+id/icon_2"
                android:layout_toRightOf="@+id/icon_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_gravity="start">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/activity_name"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:textColor="@color/d_grey2"
                    android:textSize="@dimen/_14sdp"
                    android:text="name dfds dfdf dfdsf dfdf"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:layout_alignParentEnd="true"
                android:id="@+id/icon_2"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_alignParentRight="true">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/go_icon"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_arrow_right"
                    android:tint="@color/d_grey2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="@dimen/_10sdp" />

            </RelativeLayout>

        </RelativeLayout>




    </RelativeLayout>
</layout>